{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "types": ["node", "jsdom", "@types/testing-library__jest-dom", "mocha", "jest", "@testing-library/jest-dom/vitest"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~@": ["*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", ".eslintrc.json", "jest.config.cjs", "tests/setup-tests.mjs"],
  "exclude": [
    "**/*.test.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
